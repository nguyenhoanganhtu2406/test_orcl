@model IEnumerable<ASPCore_Final.Models.Hanghoa>
@{
    Layout = "";
}
@if (Model.Count() > 0)
{
    <h5 style="color:mediumblue">Có (@Model.Count()) kết quả tìm thấy:</h5>
}
else
{
    <h5 style="color:orangered">Không có kết quả tìm thấy</h5>
}
<br />
<ul type="none">
    @if (Model != null)
    {
        foreach (var item in Model)
        {

            <li style="margin:10px;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"><a asp-action="ChiTiet" asp-controller="Hanghoa" asp-route-mahh="@item.Mahh"><img src="~/Hanghoa/@item.Hinh" style="width:50px;height:50px;" /><span>@item.Tenhh</span></a></li>
        }
    }
</ul>